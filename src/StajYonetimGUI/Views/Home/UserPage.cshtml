<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Personel-Öğrenci Bilgileri</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: lightsteelblue;
            background-position: center;
            color: #333; /* Metin rengi */
        }

        .container {
            max-width: 400px; /* Box'un maksimum genişliği */
            margin: 30px auto; /* Sayfa ortasında hizalamak için */
            padding: 30px; /* İçeriği çevreleyen padding */
            background-color: #f4f4f4; /* Box'un rengi */
            border-radius: 10px; /* Köşeleri yuvarlamak için */
        }

        h2 {
            margin-bottom: 10px;
        }

        /* Inputları ovalleştirmek için */
        input[type="text"] {
            padding: 8px;
            margin-bottom: 10px;
            border-radius: 10px;
            border: 1px solid #ccc;
            width: 100%;
            box-sizing: border-box;
        }

        /* Ekle butonunu genişletmek için */
        input[type="button"] {
            padding: 10px;
            width: 100%;
            box-sizing: border-box;
            background-color: #007bff;
            color: white;
            border: none;
            cursor: pointer;
        }

        /* Liste elementlerini düzenlemek için */
        ul {
            list-style: none;
            padding: 0;
        }

        li {
            margin-bottom: 10px;
            border-bottom: 1px solid #ccc;
            padding-bottom: 10px;
        }

        button {
            padding: 5px 10px;
            margin-left: 10px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container">
        <img src="~/images/logoısubü.png" height="200" width="200" />
        <h2>Personel ve Öğrenci Ekleme Formu</h2>
        <form id="personelForm" action="submit.php" method="post">
           
            <label for="ad">Ad:</label>
            <input type="text" id="ad" name="ad" placeholder="Adınızı giriniz"><br><br>

            <label for="soyad">Soyad:</label>
            <input type="text" id="soyad" name="soyad" placeholder="Soyadınızı giriniz"><br><br>

            <label for="id">ID:</label>
            <input type="text" id="id" name="id" placeholder="ID'nizi giriniz"><br><br>

            <input type="button" value="Ekle" onclick="eklePersonel()">
        </form>

        <h2>Liste</h2>
        <ul id="liste"></ul>
    </div>

    <script>
        let personelListesi = [];

        function eklePersonel() {
            const ad = document.getElementById('ad').value;
            const soyad = document.getElementById('soyad').value;
            const id = document.getElementById('id').value;

            const yeniPersonel = {
                ad: ad,
                soyad: soyad,
                id: id
            };

            personelListesi.push(yeniPersonel);
            resetForm();
            listele();
        }

        function resetForm() {
            document.getElementById('ad').value = '';
            document.getElementById('soyad').value = '';
            document.getElementById('id').value = '';
        }

        function listele() {
            const listeElementi = document.getElementById('liste');
            listeElementi.innerHTML = '';

            personelListesi.forEach(function (personel, index) {
                const li = document.createElement('li');
                li.appendChild(document.createTextNode(`${personel.ad} ${personel.soyad} - ID: ${personel.id}`));

                const silButton = document.createElement('button');
                silButton.appendChild(document.createTextNode('Sil'));
                silButton.onclick = function () {
                    personelListesi.splice(index, 1);
                    listele();
                };
                li.appendChild(silButton);

                const guncelleButton = document.createElement('button');
                guncelleButton.appendChild(document.createTextNode('Güncelle'));
                guncelleButton.onclick = function () {
                    document.getElementById('ad').value = personel.ad;
                    document.getElementById('soyad').value = personel.soyad;
                    document.getElementById('id').value = personel.id;

                    personelListesi.splice(index, 1);
                    listele();
                };
                li.appendChild(guncelleButton);

                listeElementi.appendChild(li);
            });
        }
    </script>
</body>
</html>
